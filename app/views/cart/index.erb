<div class="container">
  <div class="row">
    <table class="table table-hover table-cart">
      <thead class="thead-default">
        <tr>
          <th>Product</th>
          <th class="table-number-column">Unit Price</th>
          <th class="table-number-column">VAT</th>
          <th class="table-action-column">Quantity</th>
          <th class="table-number-column">Subtotal</th>
          <th class="table-action-column">&nbsp;</th>
        </tr>
      </thead>
      <tfoot>
        <tr class="table-info">
          <th colspan="5" class="table-number-column">Total w/ VAT:</th>
          <th class="table-number-column"><%= cart.total_with_vat %></th>
          <th class="table-action-column">&nbsp;</th>
        </tr>
      </tfoot>
      <tbody>
      <% cart.items.each_with_index do |cart_item, no| %>
        <tr>
          <td>
            <span class="name"><%= cart_item.product.name %></span>
          </td>
          <td class="table-number-column">
            <span class="price"><%= cart_item.product.price_with_vat %></span>
          </td>
          <td class="table-number-column">
            <span class="vat"><%= cart_item.product.vat %></span>
          </td>
          <td class="table-action-column">
            <form action="/cart" method="post">
              <input type="hidden" name="_method" value="put">
              <input type="hidden" name="product_id" value="<%= cart_item.product.id %>">
              <input type="number" name="quantity" value="<%= cart_item.quantity %>">
              <button type="submit" class="btn btn-sm">Update</button>
            </form>
          </td>
          <td class="table-number-column">
            <span class="total font-weight-bold"><%= cart_item.total_with_vat %></span>
          </td>
          <td class="table-action-column">
            <form action="/cart" method="post">
              <input type="hidden" name="_method" value="delete">
              <input type="hidden" name="product_id" value="<%= cart_item.product.id %>">
              <button type="submit" class="btn btn-sm btn-danger">Remove</button>
            </form>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
